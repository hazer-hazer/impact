{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Cargo launch",
      "cargo": {
        "args": ["build"]
      },
      "args": []
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'impact'",
      "cargo": {
        "args": ["build", "--bin=impact", "--package=impact", "--features", "verbose_debug"],
        "filter": {
          "name": "impact",
          "kind": "bin"
        }
      },
      "args": [
        "--compilation-depth", "typeck"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'impact'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=impact", "--package=impact"],
        "filter": {
          "name": "impact",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
